/* miniprogram/pages/search/search.wxss */
.search{
  background-color: #dddddd;
  font-size: 30rpx;
  margin: 20rpx 20rpx;
  border-radius: 15rpx;
  box-sizing: border-box;
}
.searchicon{
  padding: 15rpx 15rpx;
  width: 40rpx;
  height: 40rpx;
  float: left;
}
.search input{
  height: 70rpx;
  vertical-align: middle;
  display: inline-block;
}

.HOT{
  margin: 20rpx 20rpx;
}
.hotKey{
  margin: 20rpx 0 0 10rpx;
}
li{
  display: block;
  padding-top: 20rpx;
  font-size: 35rpx;
  color: #333333;
}