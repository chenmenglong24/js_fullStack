<!-- pages/main/index.wxml -->
<view class="container">
    <swiper indicator-dots="true" 
            indicator-color="#eee"
            indicator-active-color="red"
            autoplay="true" 
            interval="3000" 
            duration="1000">
        <block wx:for="{{imgUrls}}" wx:key="{{index}}">
            <swiper-item>
                <image src="{{item}}" 
                       class="slide-image" 
                       width="355" 
                       height="150" />
            </swiper-item>
        </block>
    </swiper>
</view>